<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/book-solid.svg">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">


    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/fontawesome.min.css">

    <!-- Plugins css -->
    <link href="~/assets/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/datatables/responsive.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/datatables/buttons.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/datatables/select.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/assets/plugins/hover/hover.css" />
    <!-- Theme Layout -->
    <link rel="stylesheet" href="~/assets/css/modern.css" />

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- CUSTOM CSS -->
    <link rel="stylesheet" href="~/assets/css/Custom.css">

    <!-- Head Libs -->
    <script src="~/assets/plugins/modernizr/modernizr.js"></script>

    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
</head>
<body>
    <a class="Go-up" href="#top" title="Go up">
        <span class="fa-stack">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-arrow-up fa-stack-1x fa-inverse"></i>
        </span>
    </a>
    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <!-- Header -->
        <header class="header">
            <nav class="navbar navbar-expand-lg header-nav">
                <div class="navbar-header">
                    <a id="mobile_btn" href="javascript:void(0);">
                        <span class="bar-icon">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </a>
                    <a asp-action="index" class="navbar-brand logo float-left">
                        <img src="~/images/Books.png" class="logo-container" style="max-height:50px;" alt="Logo">
                    </a>

                </div>
                <div class="main-menu-wrapper">
                    <div class="menu-header">
                        <a asp-action="index" class="menu-logo">
                            <img src="~/images/Books.png" class="logo-container" style="max-height:50px;" alt="Logo">
                        </a>
                        <a id="menu_close" class="menu-close" href="javascript:void(0);">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>

                </div>
                <ul class="nav header-navbar-rht">
                    <li class="nav-item px-4">
                        <a asp-action="index">Home</a>
                    </li>

                </ul>
            </nav>
        </header>
        <!-- /Header -->
        <!-- Page Wrapper -->
        <div class="page-wrapper ">
            <div class="content p-0">
                @RenderBody()

            </div>

        </div>
        <!-- /Page Wrapper -->

        <footer class="footer">

            <!-- Footer Top -->
            <div class="footer-top">
                <div class="container-fluid">
                    <h6 class="text-white float-right px-5">@DateTime.Now.Year &copy;</h6>
                </div>
            </div>
        </footer>
    </div>
    <!-- Modal -->
    <div class="modal" id="ModalBook" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <form method="post" asp-action="SaveBook" enctype="multipart/form-data" class="modal-content" id="FormBook">
                <input type="hidden" name="isAvailable" value="true" />

                <div class="modal-header">
                    <p class="modal-title font-size-20">Add new book</p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                        <div class="card-body">
                            <!-- Credit Card Payment -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group card-label position-relative" id="DocuDiv">
                                        <div class="calicon uploadIcon"></div>
                                        <label>Cover</label>
                                        <div class="calicon FilePDF"></div>
                                        <input class="form-control fileLoad" type="file" accept=".png,.jpg,.gif,.bmp,.jpeg" name="DocuFile" id="DocuFile">
                                        <span class="error">This field is required.</span>
                                    </div>

                                </div>
                                <div class="col-md-12">
                                    <div class="form-group card-label mb-0" id="TitleDiv">
                                        <label for="Title">Title</label>
                                        <input id="Title" name="Title" type="text" class="form-control">
                                        <span class="error">This field is required.</span>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <div class="form-group card-label mb-0 mt-3" id="AuthorDiv">
                                        <span class="error">This field is required.</span>
                                        <label for="Author">Author</label>
                                        <input class="form-control" id="Author" name="Author" type="text">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group card-label mt-3">
                                        <label for="Description">Description</label>
                                        <input class="form-control TextArea-Input" id="Description" name="Description" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" onclick="ValidateData();" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>


    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap Core JS -->
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <!-- third party js -->
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="~/assets/plugins/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/datatables/buttons.html5.min.js"></script>
    <script src="~/assets/plugins/datatables/buttons.flash.min.js"></script>
    <script src="~/assets/plugins/datatables/buttons.print.min.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.keyTable.min.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.select.min.js"></script>
    <script src="~/assets/plugins/datatables/vfs_fonts.js"></script>
    <!-- third party js ends -->

    <script src="~/assets/js/theme.js"></script>
    <script src="~/assets/js/theme.init.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/script.js"></script>
    <script src="~/js/site.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
